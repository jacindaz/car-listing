<h3>Submit a new Manufacturer</h3>

<%= simple_form_for(@manufacturer) do |f| %>

  <% if @manufacturer.errors.any? %>
      <% @manufacturer.errors.full_messages.each do |msg| %>
        <br><h5 style="color:red;"><%= msg %></h5><br>
      <% end %>
  <% end %>

  <%= f.input :name %>
  <%= f.label :country %>
  <%= f.select :country, Manufacturer::COUNTRIES %><br>
  <%= f.button :submit %>

<% end %>
